
[Unit]
Description=Valheim idle watchdog (shut down VM when server empty too long)
Wants=network-online.target
After=network-online.target docker.service

[Service]
Type=oneshot
EnvironmentFile=/etc/valheim-idle/config
ExecStart=/usr/local/sbin/valheim-idle-shutdown.py
User=root
Group=root
Nice=10
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
